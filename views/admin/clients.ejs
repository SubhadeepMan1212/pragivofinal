<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Clients - Admin</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="/styles.css" rel="stylesheet" type="text/css" />
    <link href="https://assets.website-files.com/62aee78456e4207786ac4d18/62b0fad1a8cf6a4c26b3cb5e_Faivcon%2032.svg" rel="shortcut icon" type="image/x-icon" />
    <link href="https://assets.website-files.com/62aee78456e4207786ac4d18/62b0fad95898ce119a80c68e_Faivcon%20256.svg" rel="apple-touch-icon" />
    <style>
        body {
            background-color: #1a1a1a;
            color: #ffffff;
        }
        .nav-bar {
            background-color: #2d2d2d;
        }
        .logotext {
            color: #ffffff;
        }
        .nav-link {
            color: #ffffff !important;
        }
        .nav-link.w-nav-link[style*="color: #5a0077"] {
            color: #b366cc !important;
        }
        .section.light-color-gradient {
            background: #1a1a1a;
        }
        .heading.h2 {
            color: #ffffff;
        }
        .styled-table {
            background-color: #2d2d2d;
            color: #ffffff;
            border-collapse: collapse;
        }
        .styled-table thead tr {
            background-color: #404040;
        }
        .styled-table th,
        .styled-table td {
            border-bottom: 1px solid #404040;
        }
        .styled-table tbody tr {
            border-bottom: 1px solid #404040;
        }
        .styled-table tbody tr:nth-of-type(even) {
            background-color: #333333;
        }
        .modal-content {
            background-color: #2d2d2d;
            color: #ffffff;
            border: 1px solid #404040;
        }
        .close {
            color: #ffffff;
        }
        .close:hover {
            color: #cccccc;
        }
        .nav-cta-button-container .cta-button1 {
            background-color: #2e7d32;
            color: #ffffff !important;
        }
        .nav-cta-button-container .cta-button1:hover {
            background-color: #1b5e20;
        }
    </style>
</head>

<body>
    <div data-collapse="small" data-animation="default" data-duration="400" data-easing="ease" data-easing2="ease" role="banner" class="nav-bar w-nav">
        <div class="nav-container w-container">
            <div class="logo-div">
                <a href="/api/admin/dashboard" aria-current="page" class="logotext" style="margin-right: 275px;"><b>Pragivo</b></a>
            </div>

            <nav role="navigation" class="nav-content w-nav-menu">
                <div class="nav-menu">
                    <a href="/api/admin/dashboard" class="nav-link w-nav-link">Dashboard</a>
                    <a href="/api/admin/workers" class="nav-link w-nav-link">Workers</a>
                    <a href="/api/admin/categories" class="nav-link w-nav-link">Categories</a>
                    <a href="/api/admin/paring" class="nav-link w-nav-link">Pairings</a>
                    <a href="/api/admin/clients" class="nav-link w-nav-link" style="color:#5a0077;"><b>Clients</b></a>
                  
                </div>
                
                <div class="nav-cta-button-container">
                    <a href="#" class="nav-link cta-button1 w-nav-link">Log Out</a>
                </div>
            </nav>
            <div class="menu-button w-nav-button">
                <img src="https://assets.website-files.com/62aee78456e4207786ac4d18/62aee78456e4200f2eac4d49_Menu%20Icon.svg" loading="lazy" width="24" alt="" class="menu-icon" />
            </div>
        </div>
    </div>

    <div class="page-wrapper">
        <div class="section light-color-gradient wf-section" style="padding-top:3%">
            <div class="container w-container">
                <div class="text-box _1200px center-align">
                    <h2 class="heading h2">Our Clients</h2>
                    
                    <table class="styled-table">
                        <thead>
                            <tr>
                                <th>Client ID</th>
                                <th>Client Name</th>
                                <th>Client Email</th>
                                <th>Mobile Number</th>
                                <th>Joining Date</th>
                                <th>Tasks Posted</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i<clients.length; i++){ %>
                                <tr>
                                    <th><%= clients[i]._id%></th>
                                    <td class="t-name"><%= clients[i].name%></td>
                                    <td class="t-name"><%= clients[i].email%></td>
                                    <td><%= clients[i].phone%></td>
                                    <td><%= clients[i].joiningDate.getDate() %>/<%= clients[i].joiningDate.getMonth() + 1 %>/<%= clients[i].joiningDate.getFullYear() %></td>
                                    <td><%= clients[i].tasks%></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div id="myModal" class="modal">
            <div class="modal-content" style="padding-left: 50px; padding-top: 30px;">
                <span class="close" id="closeBtn">&times;</span>
                <p style="font-weight: bold;">Name: Dom David</p>
                <p style="font-weight: bold;">Email: dom@gmail.com</p>
                <p style="font-weight: bold;">Mobile: +91 7558612763</p>
                <p style="font-weight: bold;">Categories: Carpentry</p>
            </div>
        </div>
    </div>

    <script>
        var modal = document.getElementById("myModal");
        var btn = document.getElementById("viewBtn");
        var span = document.getElementsByClassName("close")[0];

        btn.onclick = function() {
            modal.style.display = "block";
        }

        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>
</html>