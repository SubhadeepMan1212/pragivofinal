/* General Styling */
body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #f3f3f3, #e0e0e0);
    margin: 0;
    padding: 0;
}

/* Navbar */
.nav-bar {
    background: #5a0077;
    padding: 15px 0;
}

.nav-link {
    color: white;
    font-weight: bold;
    padding: 10px 15px;
    transition: 0.3s;
}

.nav-link:hover {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 5px;
}

/* Category Section */
.category-section {
    padding: 2rem;
    text-align: center;
}

.catogryAddingBtn {
    text-align: right;
    margin-bottom: 20px;
}

.btn-add {
    background: #5a0077;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

.btn-add:hover {
    background: #7500a0;
}

.category-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: white;
    padding: 15px;
    margin: 10px 0;
    border-radius: 8px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
}

.table-accept-btn, .table-reject-btn {
    padding: 8px 15px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

.table-accept-btn {
    background: #28a745;
    color: white;
}

.table-accept-btn:hover {
    background: #218838;
}

.table-reject-btn {
    background: #dc3545;
    color: white;
}

.table-reject-btn:hover {
    background: #c82333;
}

/* Modals */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

.modal-content {
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
    text-align: center;
}

.modal input {
    width: 80%;
    padding: 10px;
    margin: 10px 0;
    border-radius: 5px;
    border: 1px solid #ccc;
}

.modal button {
    padding: 10px 15px;
    margin: 10px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

.modal .btn-save2 {
    background: #5a0077;
    color: white;
}

.modal .btn-save2:hover {
    background: #7500a0;
}
